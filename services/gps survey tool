    <script>
        function calculateDistance(lat1, lon1, lat2, lon2) {
            const R = 6371000;
            const dLat = (lat2 - lat1) * Math.PI / 180;
            const dLon = (lon2 - lon1) * Math.PI / 180;
            const a = Math.sin(dLat / 2) * Math.sin(dLat / 2) +
                      Math.cos(lat1 * Math.PI / 180) * Math.cos(lat2 * Math.PI / 180) *
                      Math.sin(dLon / 2) * Math.sin(dLon / 2);
            const c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1 - a));
            return R * c;
        }

        function calculateAngle(lat1, lon1, lat2, lon2, lat3, lon3) {
            const toRadians = (deg) => deg * Math.PI / 180;

            const x1 = Math.cos(toRadians(lat1)) * Math.cos(toRadians(lon1));
            const y1 = Math.cos(toRadians(lat1)) * Math.sin(toRadians(lon1));
            const z1 = Math.sin(toRadians(lat1));

            const x2 = Math.cos(toRadians(lat2)) * Math.cos(toRadians(lon2));
            const y2 = Math.cos(toRadians(lat2)) * Math.sin(toRadians(lon2));
            const z2 = Math.sin(toRadians(lat2));

            const x3 = Math.cos(toRadians(lat3)) * Math.cos(toRadians(lon3));
            const y3 = Math.cos(toRadians(lat3)) * Math.sin(toRadians(lon3));
            const z3 = Math.sin(toRadians(lat3));

            const vector1 = [x2 - x1, y2 - y1, z2 - z1];
            const vector2 = [x3 - x2, y3 - y2, z3 - z2];

            const dotProduct = vector1[0] * vector2[0] + vector1[1] * vector2[1] + vector1[2] * vector2[2];
            const magnitude1 = Math.sqrt(vector1[0] ** 2 + vector1[1] ** 2 + vector1[2] ** 2);
            const magnitude2 = Math.sqrt(vector2[0] ** 2 + vector2[1] ** 2 + vector2[2] ** 2);

            const angle = Math.acos(dotProduct / (magnitude1 * magnitude2));
            return angle * 180 / Math.PI;
        }

        function calculateArea(lat1, lon1, lat2, lon2, lat3, lon3) {
            const toRadians = (deg) => deg * Math.PI / 180;
            const R = 6371000;

            const a = calculateDistance(lat2, lon2, lat3, lon3) / R;
            const b = calculateDistance(lat1, lon1, lat3, lon3) / R;
            const c = calculateDistance(lat1, lon1, lat2, lon2) / R;

            const s = (a + b + c) / 2;
            const tanE = Math.sqrt(Math.tan(s / 2) * Math.tan((s - a) / 2) * Math.tan((s - b) / 2) * Math.tan((s - c) / 2));
            const E = 4 * Math.atan(tanE);

            return (E * R * R);
        }

        function calculateNorthAngle(lat1, lon1, lat2, lon2) {
            const toRadians = (deg) => deg * Math.PI / 180;
            const toDegrees = (rad) => rad * 180 / Math.PI;

            const dLon = toRadians(lon2 - lon1);
            const lat1Rad = toRadians(lat1);
            const lat2Rad = toRadians(lat2);

            const y = Math.sin(dLon) * Math.cos(lat2Rad);
            const x = Math.cos(lat1Rad) * Math.sin(lat2Rad) -
                      Math.sin(lat1Rad) * Math.cos(lat2Rad) * Math.cos(dLon);

            const angle = Math.atan2(y, x);
            return (toDegrees(angle) + 360) % 360; // Normalize to 0-360 degrees
        }

        function computeResults() {
            const lat1 = parseFloat(document.getElementById("lat1").value);
            const lon1 = parseFloat(document.getElementById("lon1").value);
            const lat2 = parseFloat(document.getElementById("lat2").value);
            const lon2 = parseFloat(document.getElementById("lon2").value);
            const lat3 = parseFloat(document.getElementById("lat3").value);
            const lon3 = parseFloat(document.getElementById("lon3").value);

            const distance = calculateDistance(lat1, lon1, lat2, lon2);
            const angle = calculateAngle(lat1, lon1, lat2, lon2, lat3, lon3);
            const area = calculateArea(lat1, lon1, lat2, lon2, lat3, lon3);
            const northAngle = calculateNorthAngle(lat1, lon1, lat2, lon2);

            document.getElementById("distanceResult").innerText = `Distance: ${distance.toFixed(2)} m`;
            document.getElementById("angleResult").innerText = `Angle: ${angle.toFixed(2)}°`;
            document.getElementById("areaResult").innerText = `Area: ${area.toFixed(2)} m²`;
            document.getElementById("northAngleResult").innerText = `Bearing: ${northAngle.toFixed(2)}°`;
        }
    </script>
</head>
